{
  "schemaVersion": "2.2",
  "description": "Mounts NFS target on EC2 instances",
  "parameters": {
    "FileSystemDNS": {
      "type": "String",
      "description": "DNS name of the file system"
    },
    "MountPoint": {
      "type": "String",
      "description": "NFS mount point",
      "default": "/mnt/efs/"
    },
    "ExecutionTimeout": {
      "type": "String",
      "description": "(Optional) Execution timeout in seconds",
      "default": "600"
    }
  },
  "mainSteps": [
    {
      "action": "aws:runShellScript",
      "name": "NFSMount",
      "precondition": {
        "StringEquals": [
          "platformType",
          "Linux"
        ]
      },
      "inputs": {
        "runCommand": [
          "#!/bin/bash",
          "",
          "set -e",
          "",
          "mkdir -p {{ MountPoint }}",
          "if [ $? -ne 0 ]; then",
          "  exit 1",
          "fi",
          "sleep 60",
          "mount -t nfs -o nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2,noresvport {{ FileSystemDNS }}:/ {{ MountPoint }}",
          "if [ $? -ne 0 ]; then",
          "  exit 1",
          "fi"
        ],
        "timeoutSeconds": "{{ ExecutionTimeout }}"
      }
    }
  ]
}